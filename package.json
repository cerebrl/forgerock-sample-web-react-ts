{
  "name": "forgerock-sample-web-react-ts",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "clean": "git clean -fdX -e \"!.env\"",
    "build:app": "npm run build --workspace todo-react-app",
    "build:proxy": "npm run build --workspace token-vault-proxy",
    "build:server": "npm run build --workspace todo-api-server",
    "dev:app": "npm run dev --workspace todo-react-app",
    "dev:proxy": "npm run dev --workspace token-vault-proxy",
    "dev:server": "npm run dev --workspace todo-api-server",
    "lint": "eslint --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "serve:app": "npm run serve --workspace todo-react-app",
    "serve:proxy": "npm run serve --workspace token-vault-proxy",
    "serve:server": "npm run serve --workspace todo-api-server"
  },
  "dependencies": {
    "@forgerock/javascript-sdk": "../forgerock-javascript-sdk/dist/packages/javascript-sdk",
    "@forgerock/token-vault": "../forgerock-javascript-sdk/dist/packages/token-vault"
  },
  "devDependencies": {
    "@types/node": "^20.3.2",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "typescript": "^5.0.2"
  },
  "workspaces": [
    "token-vault-proxy",
    "todo-react-app",
    "todo-api-server"
  ]
}
